{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hermes.dev/schemas/page_classification.schema.json",
  "title": "Page Classification",
  "description": "AI Engine page state classification schema (used with Gemini controlled generation)",
  "type": "object",
  "required": ["page_state", "confidence"],
  "properties": {
    "page_state": {
      "type": "string",
      "enum": ["CONTENT_VISIBLE", "GATED", "BLOCKED", "ERROR", "LOADING", "REDIRECT", "EMPTY"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "content_regions_detected": {
      "type": "integer",
      "minimum": 0
    },
    "obstruction_indicators": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
